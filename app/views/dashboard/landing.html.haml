.container
  .row.row-eq-height
    .col-sm.12.col-md-10.col-md-push-2.primary
      .title
        %h1
          DASHBOARD
      .content
        %h6
          =link_to 'RECENT DOCUMENTS', documents_path
        -if @documents.exists?
          %ul.list-inline.doc-toolbar
            %li
              YOUR VIEWS
            %li
              UPLOADED
            %li
              ANNOTATED
          - @documents.each do |permission|
            = render partial: 'documents/document_list', locals: {p: permission}
        -else
          ADD DOC or INTROBOX
    =render 'layouts/left_sidebar'
