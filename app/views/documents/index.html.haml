-breadcrumb :documents
.container-fluid
  .row
    .col-xs-12.col-sm-9.pull-right
      %h4 DOCUMENTS
      = link_to 'New document', new_document_path
      -if @documents.exists?
        .container
          .row
            - @documents.each do |document|
              = render partial: 'document_list_full', locals: {d: document}
      -else 
        %h3 NO DOCS
    .col-xs-12.col-sm-3.pull-left
      = render partial: 'document_index_left_nav.html.haml'
