- provide(:title, 'DOCUMENTS: '+@document.title.upcase)
.container
  .row.row-eq-height
    .col-sm-12.primary
      .title
        %h1
          DOCUMENT:
          =doc_title(@document)
          =@project.title
      =@document.description
      .description
        =@document.description
      .edit_link
        - if policy(@document).update?
          =link_to 'Edit', edit_document_path(@document)
      .primary-content
        =doc_meta(@document)


