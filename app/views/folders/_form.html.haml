.container
  .row
    .col-sm-12
      = simple_form_for(@folder) do |f|
        = f.error_notification
        .form-inputs
          = f.hidden_field :project_id, value: project_id
        .form-inputs
          = f.input :title
        .form-group
        
          = f.simple_fields_for :documents do |d|
            = render 'folders/documents', d: d
        .form-actions
          = f.button :submit
