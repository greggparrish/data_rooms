.col-sm-12.col-md-2.col-md-pull-10.sidebar-left
  .sidebar-box.user
    %ul.list-unstyled
      %li
        = link_to image_tag(current_user.avatar, class: 'img-circle'), current_user
      %h2
        %li.username= link_to current_user.name.upcase, current_user
      %li.email= current_user.email
      %li= current_user.title
      %li= current_user.company
  .sidebar-box.notifications
    %h6
      NOTIFICATIONS

