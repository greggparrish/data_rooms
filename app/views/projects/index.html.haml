- provide(:title, 'PROJECTS')
.container
  .row.row-eq-height
    .col-sm.12.col-md-10.col-md-push-2.primary
      .title
        %h1
          PROJECTS
      .primary-content
        .col-xs-12
          -if @projects.exists?
            -@projects.each do |p|
              .row
                .col-xs-12.col-sm-3.col-md-2
                  =link_to image_tag(p.project.thumbnail), project_path(p.project) 
                .col-xs-12.col-sm-9.col-md-10
                  =link_to p.project.title, project_path(p.project)
        .col-xs-12.col-md-3
    =render 'shared/left_sidebar'


