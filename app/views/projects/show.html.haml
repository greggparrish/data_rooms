- provide(:title, 'PROJECTS: '+@project.title.upcase)
.container
  .row.row-eq-height
    .col-sm-12.col-md-10.col-md-push-2.primary
      .title
        %h1
          PROJECT:
          =@project.title.upcase
      .description
        =@project.description
      .col-xs-12.col-md-9.primary-content
        -if @documents.exists?
          = render partial: 'documents/doc_toolbar'
          = render partial: 'documents/doc_list'
      .col-xs-12.col-md-3
        -if @documents.exists?
          .doc-panel
            %h4
              %i.fa.fa-file-text
              RECENT DOCUMENTS
    =render 'shared/left_sidebar'
/* MODALS */
=render 'shared/modals/new_document_modal'
- if policy(@project).update? 
  =render 'shared/modals/new_folder_modal'
