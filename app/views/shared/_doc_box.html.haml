.col-xs-12.doc-box
  .col-xs-12
  %table.table.table-striped
    - @documents.each do |d|
      %tr
        %td
          %span.doc-meta= d.document.created_at.strftime("%b %d, %Y")
          %span= link_to doc_title(d.document), document_path(d.document)
        %td
          = check_box_tag "document_ids[]", d.document.id



