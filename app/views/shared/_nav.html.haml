%nav.navbar-default.navbar-fixed-top{:role => "navigation"}
  .container
    .row
      .col-sm-1.col-md-2.navbar-brand
        - if current_user  
          =link_to 'DATAROOMS', dashboard_path, class: 'page-scroll'
        - else
          =link_to 'DATAROOMS', root_url, class: 'page-scroll'
      .col-sm.10.navbar-menu
        %ul.list-inline
          - if current_user  
            =nav_link('TEAMS', 'group', teams_path)
            =nav_link('DOCUMENTS', 'file-text', documents_path)
            =nav_link('PROJECTS', 'sitemap', projects_path)
            %li
              %i.fa.fa-bell
            %li
              %i.fa.fa-inbox
            %li.nav-item.btn-group
              %a.dropdown-toggle.nav-link#userMenu{'data-toggle' => 'dropdown', 'aria-haspopup' => 'true', 'aria-expanded' => 'false', :type => 'button'}
                =current_user.username.upcase
                =image_tag(current_user.avatar, class: 'img-circle navbar-avatar')
              %ul.dropdown-menu{'aria-labelledby' => 'userMenu'}
                %li= link_to "EDIT PROFILE", edit_user_registration_path
                %li= link_to "LOGOUT", destroy_user_session_path, method: :delete
          - else
            %li= link_to "ABOUT", "#about", class: 'page-scroll'
            %li= link_to "FEATURES", "#features", class: 'page-scroll'
            %li= link_to "NEWS & EVENTS", "#news", class: 'page-scroll'
            %li
              %hr
            %li= link_to "LOGIN", new_user_session_path
            %li= link_to "REGISTER", new_user_registration_path
